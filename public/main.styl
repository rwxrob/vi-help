body
  font-family proxima-nova, 'Helvetica Neue', Helvetica Arial, sans-serif
  text-align center
  //font-size 30pt

th, h1, td
  text-align left
  vertical-align top

th, h1
  background lightgrey
  padding 0.5em
  text-align center

header h1
  text-align center

table
  display inline-block
  vertical-align top
  margin 1em
  white-space nowrap

td
  padding .5em
  vertical-align top
  border 0

td.k
  font-family Consolas, Menlo, Monaco, mono
  font-weight bold

.skilstak img
  width 25%

@page
  size landscape

@media print
  body
    font-size 6pt
    //font-family Helvetica, Arial, sans-serif

  table
    display inline-block

  .section
    th
      border 1px solid black

  header
    display none

  div[id="Modes\ \&\ Files"]
    position absolute
    left 0
    top 0

  #Insert
    position absolute
    left 0
    top 130pt

  #Delete
    position absolute
    left 0
    top 290pt

  #Move
    position absolute
    left 140pt 
    top 1pt

  footer
    position absolute
    left 140pt
    top 400pt
    .formats
      display none

@media only screen and (max-width: 70em)
  body
    font-size 33pt
